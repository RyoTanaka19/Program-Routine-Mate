<div data-controller="friend-add-modal">
  <!-- 友だち追加ボタン -->
  <div class="flex flex-col items-center w-20 mt-8">
    <button data-action="friend-add-modal#openModal" aria-label="友だち追加ボタン" class="relative" id="friend-image">
      <%= image_tag("friend.png", alt: "友だち追加", class: "cursor-pointer mx-auto w-16 h-16") %>
    </button>
    <span class="mt-2 text-sm text-green-600 text-center">LINE友だち追加</span>
  </div>

  <!-- モーダル -->
  <div id="friend-modal" data-friend-add-modal-target="modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center" role="dialog" aria-modal="true" aria-labelledby="friend-modal-title" aria-describedby="friend-modal-desc" data-action="click->friend-add-modal#clickOutside">
    <div class="bg-white p-8 rounded-lg shadow-lg w-72 max-w-xs">
      <div class="flex flex-col items-center">
        <%= image_tag("line_friend.png", alt: "LINE友だち追加QRコード", class: "mx-auto w-32 h-32") %>
        <div id="thank-you-message" data-friend-add-modal-target="message" class="mt-4 text-[#00C300] text-lg font-semibold hidden animate-fade-in">
          友だち申請ありがとう!!
        </div>
        <button data-action="click->friend-add-modal#closeModal" class="mt-4 px-4 py-2 bg-green-600 text-white rounded-full" id="close-modal">
          閉じる
        </button>
      </div>
    </div>
  </div>
</div>

