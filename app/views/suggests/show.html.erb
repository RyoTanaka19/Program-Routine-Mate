<div class="max-w-3xl mx-auto bg-white shadow-lg rounded-lg p-6 mt-6 leading-relaxed relative">

  <!-- ユーザーの相談部分 -->
  <section class="flex flex-col md:flex-row items-start gap-4 mb-8">
    <div class="flex-shrink-0">
      <% if @suggest.user.profile_image.present? %>
        <%= image_tag(@suggest.user.profile_image.url, 
                      alt: "#{@suggest.user.name}さんのプロフィール", 
                      class: "w-16 h-16 rounded-full object-cover shadow-md border-4 border-white") %>
      <% else %>
        <%= image_tag("default_study_logs_image.png", 
                      alt: "#{@suggest.user.name}さんのプロフィール", 
                      class: "w-16 h-16 rounded-full object-cover shadow-md border-4 border-white") %>
      <% end %>
    </div>
    <div>
      <h2 class="text-2xl font-bold text-gray-900 mb-2">
        <%= @suggest.user.name %>さんの相談
      </h2>
      <p class="text-gray-700 text-base whitespace-pre-wrap"><%= @suggest.input %></p>
    </div>
  </section>

  <!-- AIのアドバイス部分 -->
  <section class="flex flex-col md:flex-row items-start gap-4 mb-8 bg-green-50 rounded-lg p-6 shadow-md">
    <div class="flex-shrink-0">
      <%= image_tag 'ai_suggests.png', 
                    alt: "AIのプロフィール", 
                    class: "w-40 h-14 rounded-full object-cover shadow-md border-4 border-white" %>
    </div>
    <div>
      <h2 class="text-2xl font-bold text-gray-900 mb-2">AIのアドバイス</h2>
      <p class="text-gray-700 text-base whitespace-pre-wrap"><%= @suggest.response %></p>
    </div>
  </section>

  <!-- 他の提案へ誘導メッセージ -->
  <section class="bg-gray-100 rounded-lg p-4 text-center mb-6">
    <p class="text-gray-600 text-sm">
      他にも聞いてみたいことがあれば、いつでも相談してくださいね！
    </p>
  </section>

  <!-- 他の提案を受けるリンク -->
  <div class="flex justify-center">
    <%= link_to "他の提案を受ける", new_suggest_path, 
        class: "bg-green-600 text-white font-semibold px-8 py-3 rounded-lg shadow-lg hover:bg-green-700 transition" %>
  </div>

</div>
