<div class="flex justify-center items-center">
  <%= search_form_for @q, url: study_logs_path, method: :get, html: { data: { controller: "autocomplete", autocomplete_url_value: autocomplete_study_logs_path } } do |form| %>
    <div class="flex items-center space-x-2 mb-4">
      <%= form.label :content_cont, '学習内容', class: 'text-lg font-medium' %>
      <%= form.search_field :content_cont, class: 'form-control border rounded-lg p-2', placeholder: '検索ワード', data: { action: "input->autocomplete#search", autocomplete_target: "input" } %>
      <%= form.submit '検索', class: 'bg-blue-500 text-white rounded-lg p-2 hover:bg-blue-600' %>
    </div>

    <ul data-autocomplete-target="results" class="autocomplete-results border rounded-lg bg-white shadow-md mt-2"></ul>

    <% if @study_logs.any? %>
      <p class="text-green-500 font-semibold mt-4">
        検索結果: <%= @study_logs.count %> 件
      </p>
    <% else %>
      <p class="text-red-500 font-semibold mt-4">検索結果一覧がありません</p>
    <% end %>
  <% end %>
</div>
