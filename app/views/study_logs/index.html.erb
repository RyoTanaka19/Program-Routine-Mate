  function initHeatmap() {
    // #cal-heatmap ãŒå­˜åœ¨ã—ãªã„ãƒšãƒ¼ã‚¸ã§ã¯ä½•ã‚‚ã—ãªã„
    if (!document.getElementById("cal-heatmap")) return;

