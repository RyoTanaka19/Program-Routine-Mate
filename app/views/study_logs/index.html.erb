<div class="w-full flex lg:items-center flex-col">
  <!-- „Éí„Éº„Éà„Éû„ÉÉ„Éó„ÅÆË°®Á§∫È†òÂüü -->
  <div id="cal-heatmap" class="overflow-auto md:overflow-scroll"></div>
</div>

<script>
let cal = null;

document.addEventListener("turbo:load", () => {
  initHeatmap();
  registerCloseModal();
});

function registerCloseModal() {
  const closeBtn = document.getElementById("modal-close-btn");
  if (closeBtn) {
    closeBtn.onclick = () => {
      const modal = document.getElementById("logs-modal");
      if (modal) modal.classList.add("hidden");
    };
  }
}

function initHeatmap() {
  const container = document.getElementById("cal-heatmap");
  if (!container) return;

  set_heatmap();
}

function set_heatmap() {
  if (cal !== null) {
    cal.destroy();
    cal = null;
  }

  const container = document.getElementById("cal-heatmap");
  if (container) container.innerHTML = "";

  let startDate = new Date();
  startDate.setMonth(startDate.getMonth() - 2);

  let data = <%= @contribution_graph.to_json.html_safe %>;

  data = data.map(item => ({
    date: new Date(item.date).toISOString(),
    total: item.total
  }));

  cal = new CalHeatmap();

  cal.paint({
    itemSelector: '#cal-heatmap',
    domain: {
      type: 'month',
      gutter: 4,
      label: {
        text: 'MMM',
        textAlign: 'start',
        position: 'top',
      },
    },
    subDomain: {
      type: 'ghDay',
      radius: 2,
      width: 11,
      height: 11,
      gutter: 4,
    },
    date: { start: startDate },
    range: 12,
    data: {
      source: data,
      x: 'date',
      y: 'total'
    },
    type: 'json',
    scale: {
      color: {
        type: 'linear',
        range: ['#d0f0c0', '#a8e6a2', '#6abf4f', '#337d2b', '#175e17'],
        domain: [0, 0.5, 1, 2, 4],
      },
    },
  });

  cal.on('click', (event, timestamp, value) => {
    if (!timestamp) {
      console.log('„ÇØ„É™„ÉÉ„ÇØ„Åó„Åü„Çª„É´„Å´Êó•‰ªò„Åå„ÅÇ„Çä„Åæ„Åõ„Çì');
      return;
    }
    const clickedDate = new Date(timestamp).toISOString().slice(0, 10);
    fetchStudyLogsByDate(clickedDate);
  });
}

function fetchStudyLogsByDate(date) {
  fetch(`/study_logs/logs_by_date?date=${date}`, {
    headers: { 'Accept': 'application/json' }
  })
  .then(response => {
    if (response.status === 401) {
      alert("<%= t('study_logs.login_required') %>");
      window.location.href = "/users/sign_in";
      return Promise.reject("Unauthorized");
    }

    if (!response.ok) {
      throw new Error(`„Çµ„Éº„Éê„Éº„Ç®„É©„Éº: ${response.statusText}`);
    }
    return response.json();
  })
  .then(data => {
    if (data) showLogsModal(date, data);
  })
  .catch(error => {
    if (error === "Unauthorized") return;
  });
}

function showLogsModal(date, logs) {
  const modal = document.getElementById("logs-modal");
  const list = document.getElementById("logs-list");
  const title = document.getElementById("modal-title");

  title.textContent = I18n.t('study_logs.modal.title', date: date);
  list.innerHTML = "";

  if (logs.length === 0) {
    list.innerHTML = "<li><%= t('study_logs.modal.no_logs') %></li>";
  } else {
    logs.forEach(log => {
      const item = document.createElement("li");
      item.innerHTML = `
        <div class="p-3 border rounded shadow-sm bg-gray-50">
          <div class="font-bold">${log.study_genre?.name || '<%= t('study_logs.log_details.genre') %>'}: ${log.content}</div>
          <div class="text-sm text-gray-600 mt-1">${log.text || ''}</div>
          <div class="text-xs text-gray-400 mt-1"><%= t('study_logs.log_details.date') %>: ${new Date(log.created_at).toLocaleString()}</div>
        </div>
      `;
      list.appendChild(item);
    });
  }

  modal.classList.remove("hidden");
}
</script>

