<!-- 1. @study_genresが存在する場合に実行 -->
<% if @study_genres.present? %>
  <!-- 2. @study_genresから最大3件を取得し、それぞれのジャンルに対して処理を行う -->
  <% @study_genres.limit(3).each do |genre| %>
    
    <!-- 3. ジャンルに関連する学習記録（study_logs）が1件以上あるか確認 -->
    <% if genre.study_logs.any? %>
      <!-- 4. 学習記録が存在する場合、青い背景のボックスでジャンル情報を表示 -->
      <div class="bg-blue-50 p-4 rounded-md shadow-md mb-4 md:max-w-md mx-auto">
        <%= link_to "#{genre.name}", study_genre_path(genre), class: "text-green-600 hover:text-green-600 hover:underline font-semibold" %>の学習記録があります。
        
        <p class="text-blue-600 mt-1">このジャンルはすでに設定されています。</p>
        <p class="text-blue-600 mt-1">学習記録の投稿数: <%= genre.study_logs.count %> 件</p>

        <h4 class="text-lg font-semibold text-blue-600 mt-4">ジャンルを編集</h4>
        
        <%= form_with model: genre, url: study_genre_path(genre), method: :patch, class: "mt-4" do |f| %>
          <div class="mb-4">
            <%= f.label :name, "ジャンル選択", class: "block text-blue-600 mb-2" %>
            <%= f.select :name, options_for_select(StudyGenre::GENRES, selected: genre.name), class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

          <div class="mt-4">
            <%= f.submit "ジャンル更新", class: "px-6 py-2 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700" %>
          </div>
        <% end %>
      </div>

    <% else %>
      <!-- 10. 学習記録がない場合、黄色い背景でその旨を表示 -->
      <div class="bg-gray-50 p-4 rounded-md shadow-md mb-4 md:max-w-md mx-auto">
        <%= link_to "#{genre.name}", study_genre_path(genre), class: "text-green-600 hover:underline" %>の
        学習記録がまだありません。

        <div class="mt-3 space-x-4">
          <!-- 学習記録の新規投稿リンク -->
          <%= link_to "学習記録を投稿する", new_study_log_path(genre_id: genre.id), local: true, class: "text-green-600 hover:underline font-semibold" %>
        </div>

        <h4 class="text-lg font-semibold text-blue-600 mt-4">ジャンルを編集</h4>

        <%= form_with model: genre, url: study_genre_path(genre), method: :patch, class: "mt-4" do |f| %>
          <div class="mb-4">
            <%= f.label :name, "ジャンル選択", class: "block text-blue-700 mb-2" %>
            <%= f.select :name, options_for_select(StudyGenre::GENRES, selected: genre.name), class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400" %>
          </div>

          <div class="mt-4">
            <%= f.submit "ジャンル更新", class: "px-6 py-2 bg-green-500 text-white rounded-md hover:bg-green-600" %>
          </div>
        <% end %>
      </div>
    <% end %>  <%# if genre.study_logs.any? のend %>

  <% end %> <%# @study_genres.limit(3).each のend %>
<% end %> <%# @study_genres.present? のend %>

<!-- 新しいジャンル追加フォーム表示条件の修正 -->
<% if @study_genres.blank? %>
  <!-- 初回（ジャンルがない時）は無条件で表示 -->
  <div class="bg-green-50 p-4 rounded-md shadow-md mt-6 md:max-w-md mx-auto">
    <h3 class="text-xl font-semibold text-green-600">新しいジャンルを追加</h3>

    <%= form_with model: StudyGenre.new, url: study_genres_path, class: "mt-4" do |f| %>
      <div class="mb-4">
        <%= f.label :name, "ジャンル選択", class: "block text-green-700" %>
        <%= f.select :name, options_for_select(StudyGenre::GENRES), class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400" %>
      </div>

      <div class="mt-4">
        <%= f.submit "ジャンル設定", class: "px-6 py-2 bg-green-500 text-white rounded-md hover:bg-green-600" %>
      </div>
    <% end %>
  </div>
<% elsif @study_genres.count < 3 && @has_21_days_of_logs %>
  <!-- 2回目以降は21日分の学習記録がある場合のみ表示 -->
  <div class="bg-green-50 p-4 rounded-md shadow-md mt-6 md:max-w-md mx-auto">
    <h3 class="text-xl font-semibold text-green-500">新しいジャンルを追加</h3>

    <%= form_with model: StudyGenre.new, url: study_genres_path, class: "mt-4" do |f| %>
      <div class="mb-4">
        <%= f.label :name, "ジャンル選択", class: "block text-green-600" %>
        <%= f.select :name, options_for_select(StudyGenre::GENRES), class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400" %>
      </div>

      <div class="mt-4">
        <%= f.submit "ジャンル設定", class: "px-6 py-2 bg-green-500 text-white rounded-md hover:bg-green-600" %>
      </div>
    <% end %>
  </div>
<% end %>
