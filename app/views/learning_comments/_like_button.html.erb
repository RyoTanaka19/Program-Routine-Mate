<%= turbo_frame_tag "like-button-#{study_log.id}" do %>
  <% if study_log.liked_users.include?(current_user) %>
    <!-- ✅ いいね済み：塗りつぶしハート（緑） -->
    <%= button_to study_log_like_path(study_log),
                  method: :delete,
                  class: "flex items-center space-x-1 text-green-600 hover:text-green-800",
                  data: { turbo_stream: "true" } do %>
      <i class="fas fa-heart text-xl"></i>
    <% end %>
  <% else %>
    <!-- ✅ いいね前：枠付きハート（グレー） -->
    <%= button_to study_log_like_path(study_log),
                  method: :post,
                  class: "flex items-center space-x-1 text-gray-500 hover:text-red-500",
                  data: { turbo_stream: "true" } do %>
      <i class="far fa-heart text-xl"></i>
    <% end %>
  <% end %>
<% end %>
