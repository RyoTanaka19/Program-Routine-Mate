<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>学習セッションカレンダー</title>

  <!-- FullCalendar CSS -->
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css" rel="stylesheet">
  <!-- Tailwind CSS（正しくlinkタグで読み込み） -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100 font-sans">

  <!-- ヘッダー -->
  <header class="bg-green-600 p-4">
    <h1 class="text-3xl font-bold text-white text-center">学習セッションカレンダー</h1>
  </header>

  <!-- カレンダーコンテナ -->
  <div class="max-w-4xl mx-auto px-4">
    <div id="calendar" class="bg-white rounded-lg shadow-md p-4" style="height: 400px;"></div>
  </div>

  <!-- FullCalendar JS -->
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/locales-all.min.js"></script>

  <!-- カレンダーの初期化 -->
  <script>
  function initializeCalendar() {
    var calendarEl = document.getElementById('calendar');
    if (!calendarEl) return; // カレンダーがないページでは何もしない

    var calendar = new FullCalendar.Calendar(calendarEl, {
      locale: 'ja',
      initialView: 'dayGridMonth',
      initialDate: '2025-02-01',
      events: [
        <% @study_reminders.each do |reminder| %>
          {
            title: '学習リマインダー',
            start: '<%= reminder.start_time.strftime("%Y-%m-%dT%H:%M:%S") %>',
            end: '<%= reminder.end_time.strftime("%Y-%m-%dT%H:%M:%S") %>',
            description: '学習セッション',
            color: '#4CAF50'
          },
        <% end %>
      ],
      height: 'auto',
      dateClick: function(info) {
        var selectedDate = info.dateStr;

        // 現在日時を取得してデフォルト設定
        var currentDateTime = new Date();
        var currentHour = currentDateTime.getHours();
        var currentMinute = currentDateTime.getMinutes();
        
        // カレンダーの日付をクリックした際に、URLを変更
        window.location.href = "<%= new_study_reminder_path %>?date=" + selectedDate + 
                              "&hour=" + currentHour + "&minute=" + currentMinute;
      }
    });

    calendar.render();
  }

  // ページのロード時にカレンダーを初期化する
  document.addEventListener('DOMContentLoaded', function() {
    initializeCalendar();
  });

  // Turboのページ遷移後にもカレンダーを初期化
  document.addEventListener('turbo:load', function() {
    // Turboでページが完全に読み込まれた後にカレンダーを再描画
    initializeCalendar();
  });

  // turbo:frame-loadイベントを追加
  document.addEventListener('turbo:frame-load', function() {
    // Turboフレームがロードされた後にカレンダーを再描画
    initializeCalendar();
  });

  </script>

</body>
</html>
