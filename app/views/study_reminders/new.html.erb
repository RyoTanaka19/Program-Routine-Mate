<%= form_with model: @study_reminder, url: study_reminders_path, local: false, data: { controller: "redirect" }, id: 'study-reminder-form' do |f| %>
  <div class="max-w-xl mx-auto bg-white border border-blue-200 rounded-2xl shadow p-6 space-y-6">
    <h2 class="text-xl font-semibold text-blue-700 text-center border-b pb-2">
      学習リマインダー設定
    </h2>

    <div>
      <%= f.label :start_time, "学習開始日時", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.datetime_local_field :start_time,
          value: @study_reminder.start_time,
          min: Time.current.strftime("%Y-%m-%dT%H:%M"),
          id: 'study_reminder_start_time',
          class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-blue-500 focus:border-blue-500" %>
      <div class="text-red-600 text-sm">
        <% if @study_reminder.errors[:start_time].any? %>
          <%= @study_reminder.errors[:start_time].join(", ") %>
        <% end %>
      </div>
    </div>

    <div>
      <%= f.label :end_time, "学習終了日時", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.datetime_local_field :end_time,
          value: @study_reminder.end_time,
          min: Time.current.strftime("%Y-%m-%dT%H:%M"),
          id: 'study_reminder_end_time',
          class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-blue-500 focus:border-blue-500" %>
      <div class="text-red-600 text-sm">
        <% if @study_reminder.errors[:end_time].any? %>
          <%= @study_reminder.errors[:end_time].join(", ") %>
        <% end %>
      </div>
    </div>

    <div>
      <%= f.submit "リマインダーを設定",
          class: "w-full bg-blue-600 text-white text-lg font-semibold py-3 px-4 rounded-lg hover:bg-blue-700 transition duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>
<% end %>
