<%= form_with model: @study_reminder, url: study_reminders_path, local: false, data: { controller: "redirect" }, id: 'study-reminder-form' do |f| %>
  <div>
    <%= f.label :start_time, "学習開始時間", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.datetime_local_field :start_time, class: "w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :end_time, "学習終了時間", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.datetime_local_field :end_time, class: "w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
  
  <div>
    <%= f.submit "通知を設定", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition" %>
  </div>
<% end %>
