<%= form_with model: @study_reminder, url: study_reminders_path, local: false, data: { controller: "redirect" }, id: 'study-reminder-form' do |f| %>
  <div class="max-w-xl mx-auto bg-white border border-blue-200 rounded-2xl shadow p-6 space-y-6">
    <h2 class="text-xl font-semibold text-blue-700 text-center border-b pb-2">
      学習リマインダー設定
    </h2>

    <div>
      <%= f.label :start_date, "学習日付", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.date_field :start_time,
          id: 'study_reminder_start_time', # ここでIDを指定
          class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div>
        <%= f.label :start_time, "開始時間", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.time_field :start_time,
            id: 'study_reminder_start_time', # ここでIDを指定
            class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    
      <div>
        <%= f.label :end_time, "終了時間", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.time_field :end_time,
            id: 'study_reminder_end_time', # ここでIDを指定
            class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    </div>

    <div>
      <%= f.submit "リマインダーを設定",
          class: "w-full bg-blue-600 text-white text-lg font-semibold py-3 px-4 rounded-lg hover:bg-blue-700 transition duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

  </div>
<% end %>
