<%= form_with model: study_reminder, url: study_reminders_path, local: false, data: { controller: "redirect" }, id: 'study-reminder-form' do |f| %>
  <div class="max-w-xl mx-auto bg-white border border-blue-300 rounded-2xl shadow-lg p-8 space-y-6">
    <h2 class="text-2xl font-bold text-green-700 text-center border-b border-blue-100 pb-4">
      学習リマインダー設定
    </h2>

    <!-- タイトル -->
    <div class="space-y-2">
      <%= f.label :title, "学習タイトル", class: "block text-sm font-semibold text-gray-700" %>
      <%= f.text_field :title,
          placeholder: "学習タイトルを入力してください",
          id: 'study_reminder_title',
          class: "block w-full border border-gray-300 rounded-lg px-4 py-2 text-sm focus:ring-2 focus:ring-blue-500 focus:outline-none focus:border-blue-500" %>
      <% if study_reminder.errors[:title].any? %>
        <p class="text-red-600 text-sm mt-1">
          <%= study_reminder.errors[:title].join(", ") %>
        </p>
      <% end %>
    </div>

    <!-- 開始日時 -->
    <div class="space-y-2">
      <%= f.label :start_time, "学習開始日時", class: "block text-sm font-semibold text-gray-700" %>
      <%= f.datetime_local_field :start_time,
          value: nil,
          min: Time.current.strftime("%Y-%m-%dT%H:%M"),
          id: 'study_reminder_start_time',
          class: "block w-full border border-gray-300 rounded-lg px-4 py-2 text-sm focus:ring-2 focus:ring-blue-500 focus:outline-none focus:border-blue-500" %>
      <% if study_reminder.errors[:start_time].any? %>
        <p class="text-red-600 text-sm mt-1">
          <%= study_reminder.errors[:start_time].join(", ") %>
        </p>
      <% end %>
    </div>

    <!-- 終了日時 -->
    <div class="space-y-2">
      <%= f.label :end_time, "学習終了日時", class: "block text-sm font-semibold text-gray-700" %>
      <%= f.datetime_local_field :end_time,
          min: Time.current.strftime("%Y-%m-%dT%H:%M"),
          id: 'study_reminder_end_time',
          class: "block w-full border border-gray-300 rounded-lg px-4 py-2 text-sm focus:ring-2 focus:ring-blue-500 focus:outline-none focus:border-blue-500" %>
      <% if study_reminder.errors[:end_time].any? %>
        <p class="text-red-600 text-sm mt-1">
          <%= study_reminder.errors[:end_time].join(", ") %>
        </p>
      <% end %>
    </div>

    <!-- 送信ボタン -->
    <div>
      <%= f.submit "リマインダーを設定",
          class: "w-full bg-green-600 hover:bg-green-700 text-white text-base font-semibold py-3 px-4 rounded-lg transition duration-200 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>
  </div>
<% end %>

<!-- ✅ フォームの外に移動した友だち追加ボタンと画像 -->
<div class="mt-6 text-center">
  <button
    id="friend-toggle-button"
    onclick="toggleFriendImage()"
    class="inline-block border-2 border-[#00C300] text-[#00C300] hover:bg-[#00C300] hover:text-white font-bold py-2 px-6 rounded-full transition duration-300"
  >
    友だち追加
  </button>

  <div id="friend-image-container" class="mt-4 hidden">
    <%= image_tag("line_friend.png", alt: "LINE友だち追加QRコード", class: "mx-auto max-w-xs") %>
    <div id="thank-you-message" class="mt-4 text-[#00C300] text-lg font-semibold hidden animate-fade-in">
      友だち申請ありがとう!!
    </div>
  </div>
</div>

<!-- スタイルとスクリプトも外に出す -->
<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
  }

  button { color: #00C300; }
  #thank-you-message { color: #00C300; }
</style>

<script>
  function toggleFriendImage() {
    const container = document.getElementById("friend-image-container");
    const message = document.getElementById("thank-you-message");
    const button = document.getElementById("friend-toggle-button");

    if (container.classList.contains("hidden")) {
      container.classList.remove("hidden");
      message.classList.remove("hidden");
      message.classList.remove("animate-fade-in");
      void message.offsetWidth;
      message.classList.add("animate-fade-in");
      button.textContent = "閉じる";
    } else {
      container.classList.add("hidden");
      message.classList.add("hidden");
      button.textContent = "友だち追加";
    }
  }
</script>
