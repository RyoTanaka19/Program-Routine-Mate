<%= form_with model: @study_reminder, url: study_reminders_path, local: false, data: { controller: "redirect" }, id: 'study-reminder-form' do |f| %>
  <div class="max-w-xl mx-auto bg-white border border-blue-300 rounded-2xl shadow-lg p-8 space-y-6">
    <h2 class="text-2xl font-bold text-blue-700 text-center border-b border-blue-100 pb-4">
      学習リマインダー設定
    </h2>

    <div class="space-y-2">
      <%= f.label :start_time, "学習開始日時", class: "block text-sm font-semibold text-gray-700" %>
      <%= f.datetime_local_field :start_time,
          value: @study_reminder.start_time,
          min: Time.current.strftime("%Y-%m-%dT%H:%M"),
          id: 'study_reminder_start_time',
          class: "block w-full border border-gray-300 rounded-lg px-4 py-2 text-sm focus:ring-2 focus:ring-blue-500 focus:outline-none focus:border-blue-500" %>
      <% if @study_reminder.errors[:start_time].any? %>
        <p class="text-red-600 text-sm mt-1">
          <%= @study_reminder.errors[:start_time].join(", ") %>
        </p>
      <% end %>
    </div>

    <div class="space-y-2">
      <%= f.label :end_time, "学習終了日時", class: "block text-sm font-semibold text-gray-700" %>
      <%= f.datetime_local_field :end_time,
          value: @study_reminder.end_time,
          min: Time.current.strftime("%Y-%m-%dT%H:%M"),
          id: 'study_reminder_end_time',
          class: "block w-full border border-gray-300 rounded-lg px-4 py-2 text-sm focus:ring-2 focus:ring-blue-500 focus:outline-none focus:border-blue-500" %>
      <% if @study_reminder.errors[:end_time].any? %>
        <p class="text-red-600 text-sm mt-1">
          <%= @study_reminder.errors[:end_time].join(", ") %>
        </p>
      <% end %>
    </div>

    <div>
      <%= f.submit "リマインダーを設定",
          class: "w-full bg-blue-600 hover:bg-blue-700 text-white text-base font-semibold py-3 px-4 rounded-lg transition duration-200 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>
  </div>
<% end %>

<div class="mt-6 text-center">
  <%= link_to "友達追加", "/friend", class: "inline-block text-blue-600 hover:text-blue-800 text-sm underline" %>
</div>
