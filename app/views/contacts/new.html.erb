<h1 class="text-3xl font-bold text-center my-6">お問合せフォーム</h1>

<%= form_with model: @contact, class: "max-w-lg mx-auto p-6 bg-white shadow-md rounded-lg" do |f| %>
  <div class="mb-4">

  <div class="mb-4">
    <%= f.label :email, "メールアドレス", class: "block text-lg font-semibold text-gray-700" %>
    <%= f.text_field :email, class: "w-full px-4 py-2 mt-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= f.label :subject, "件名", class: "block text-lg font-semibold text-gray-700" %>
    <%= f.text_field :subject, class: "w-full px-4 py-2 mt-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

    <%= f.label :name, "お名前", class: "block text-lg font-semibold text-gray-700" %>
    <%= f.text_field :name, class: "w-full px-4 py-2 mt-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= f.label :message, "お問合せ内容", class: "block text-lg font-semibold text-gray-700" %>
    <%= f.text_area :message, class: "w-full px-4 py-2 mt-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <%= f.submit '送信', class: "w-full py-3 mt-4 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 transition" %>
<% end %>
