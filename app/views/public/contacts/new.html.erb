<h1 class="text-4xl font-extrabold text-center my-8 text-indigo-700">お問合せフォーム</h1>

<%= form_with model: @contact, url: confirm_public_contacts_path, class: "max-w-3xl mx-auto p-8 bg-white shadow-xl rounded-lg", data: { turbo: false } do |f| %>
  <div class="space-y-6">
    
    <!-- メールアドレス -->
    <div class="mb-4">
      <%= f.label :email, "メールアドレス", class: "block text-lg font-medium text-gray-700" %>
      <%= f.text_field :email, class: "w-full px-4 py-3 mt-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "example@domain.com" %>
      <% if @contact.errors[:email].any? %>
        <p class="text-red-600 text-sm mt-1"><%= @contact.errors[:email].first %></p>
      <% end %>
    </div>

    <!-- 件名 -->
    <div class="mb-4">
      <%= f.label :subject, "件名", class: "block text-lg font-medium text-gray-700" %>
      <%= f.text_field :subject, class: "w-full px-4 py-3 mt-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "件名を入力してください" %>
      <% if @contact.errors[:subject].any? %>
        <p class="text-red-600 text-sm mt-1"><%= @contact.errors[:subject].first %></p>
      <% end %>
    </div>

    <!-- お名前 -->
    <div class="mb-4">
      <%= f.label :name, "お名前", class: "block text-lg font-medium text-gray-700" %>
      <%= f.text_field :name, class: "w-full px-4 py-3 mt-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "フルネーム" %>
      <% if @contact.errors[:name].any? %>
        <p class="text-red-600 text-sm mt-1"><%= @contact.errors[:name].first %></p>
      <% end %>
    </div>

    <!-- お問合せ内容 -->
    <div class="mb-4">
      <%= f.label :message, "お問合せ内容", class: "block text-lg font-medium text-gray-700" %>
      <%= f.text_area :message, class: "w-full px-4 py-3 mt-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "お問合せ内容をご記入ください", rows: 5 %>
      <% if @contact.errors[:message].any? %>
        <p class="text-red-600 text-sm mt-1"><%= @contact.errors[:message].first %></p>
      <% end %>
    </div>

    <!-- 送信ボタン -->
    <div class="text-center">
      <%= f.submit '入力内容確認', class: "w-full py-3 mt-4 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 transition-all duration-200 ease-in-out transform hover:scale-105" %>
    </div>
  </div>
<% end %>
