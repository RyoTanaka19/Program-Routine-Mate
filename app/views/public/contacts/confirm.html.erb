<div class="container p-8">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <!-- 確認画面 -->
      <div class="bg-white shadow-xl p-6 rounded-lg">
        <h2 class="text-3xl font-bold text-center mb-6 text-indigo-700">確認画面</h2>
        
        <!-- 確認内容のテーブル -->
        <table class="w-full text-left border-collapse">
          <tbody>
            <tr>
              <td class="font-medium text-gray-700 py-3" style="width: 30%;">お名前</td>
              <td class="text-gray-900 py-3"><%= @contact.name %></td>
            </tr>
            <tr>
              <td class="font-medium text-gray-700 py-3" style="width: 30%;">メールアドレス</td>
              <td class="text-gray-900 py-3"><%= @contact.email %></td>
            </tr>
            <tr>
              <td class="font-medium text-gray-700 py-3" style="width: 30%;">件名</td>
              <td class="text-gray-900 py-3"><%= @contact.subject %></td>
            </tr>
            <tr>
              <td class="font-medium text-gray-700 py-3">メッセージ</td>
              <td class="text-gray-900 py-3" style="white-space: pre-wrap;"><%= @contact.message %></td>
            </tr>
          </tbody>
        </table>

        <!-- ボタン -->
        <div class="mt-6 text-center">
          <div class="flex flex-col gap-4">
            
            <!-- 送信ボタン -->
            <div>
              <%= form_with model: @contact, url: public_contacts_path, class: "inline-block", data: { turbo: false } do |f| %>
                <%= f.hidden_field :name %>
                <%= f.hidden_field :email %>
                <%= f.hidden_field :subject %>
                <%= f.hidden_field :message %>
                <div><%= f.submit '送信', class: "w-full py-3 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 transition-all duration-200 ease-in-out transform hover:scale-105" %></div>
              <% end %>
            </div>

            <!-- 戻るボタン -->
            <div>
              <%= form_with model: @contact, url: back_public_contacts_path, class: "inline-block", data: { turbo: false } do |f| %>
                <%= f.hidden_field :name %>
                <%= f.hidden_field :email %>
                <%= f.hidden_field :subject %>
                <%= f.hidden_field :message %>
                <div><%= f.submit '入力画面に戻る', class: "w-full py-3 bg-gray-600 text-white font-semibold rounded-md hover:bg-gray-700 transition-all duration-200 ease-in-out transform hover:scale-105" %></div>
              <% end %>
            </div>

          </div>
        </div>
      </div>

    </div>
  </div>
</div>
