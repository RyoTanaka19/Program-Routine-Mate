<div class="flex justify-center items-center min-h-screen bg-yellow-50 px-4">
  <div class="w-full sm:max-w-md md:max-w-lg bg-white shadow-lg rounded-xl p-6 sm:p-8 space-y-6">

    <!-- ログインページのタイトル -->
    <h1 class="text-2xl sm:text-3xl font-bold text-center text-blue-600"><%= t('sessions.login_title') %></h1>

    <!-- フラッシュメッセージ（alert）がある場合にエラーメッセージとして表示 -->
    <% if flash[:alert].present? %>
      <div class="text-red-600 text-sm text-center bg-red-100 rounded p-2">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <!-- Deviseのセッション用ログインフォーム -->
    <%= form_with model: @user, url: user_session_path, class: "space-y-4" do |form| %>

      <!-- メールアドレスの入力欄 -->
      <div>
        <label for="user_email" class="block mb-1 text-sm font-medium text-gray-700">
          <%= t('sessions.email_label') %><span class="text-red-500">(<%= t('sessions.required') %>)</span>
        </label>
        <%= form.email_field :email, id: "user_email", class: "border border-gray-300 rounded-lg p-3 w-full focus:ring-2 focus:ring-blue-500 focus:outline-none text-sm sm:text-base", placeholder: t('sessions.email_placeholder') %>
      </div>

      <!-- パスワードの入力欄 -->
      <div>
        <label for="user_password" class="block mb-1 text-sm font-medium text-gray-700">
          <%= t('sessions.password_label') %><span class="text-red-500">(<%= t('sessions.required') %>)</span>
        </label>
        <%= form.password_field :password, id: "user_password", class: "border border-gray-300 rounded-lg p-3 w-full focus:ring-2 focus:ring-blue-500 focus:outline-none text-sm sm:text-base", placeholder: t('sessions.password_placeholder') %>
        <p class="mt-1 text-xs text-gray-500"><%= t('sessions.password_hint') %></p>
      </div>

      <!-- ✅ ログイン状態を保持するチェックボックス -->
      <div class="flex items-center space-x-2 text-sm text-gray-700">
        <%= form.check_box :remember_me, class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= form.label :remember_me, t('sessions.remember_me') %>
      </div>

      <!-- ログインボタン -->
      <div>
        <%= form.submit t('sessions.login_button'), class: "bg-blue-600 text-white font-semibold py-3 rounded-lg w-full hover:bg-blue-700 transition-colors text-sm sm:text-base", data: { action: "click->loading#show" } %>
      </div>

    <% end %>

    <!-- パスワードリセットリンク -->
    <div class="text-center">
      <a href="<%= new_user_password_path %>" class="text-sm text-blue-500 hover:underline">
        <%= t('sessions.forgot_password_link') %>
      </a>
    </div>

    <!-- サインアップリンク -->
    <p class="text-sm text-center text-gray-600">
      <%= t('sessions.no_account_text') %>
      <%= link_to t('sessions.signup_link'), new_user_registration_path, class: "text-blue-500 font-medium hover:underline", data: { action: "click->loading#show" }  %>
    </p>

    <!-- OAuthログイン -->
    <% if devise_mapping.omniauthable? %>
      <div class="space-y-3 mt-6">

        <!-- 区切り文言 -->
        <div class="text-center text-sm text-gray-500 font-medium"><%= t('sessions.or_text') %></div>

        <!-- Googleログイン -->
        <%= link_to user_google_oauth2_omniauth_authorize_path, class: "flex items-center justify-center w-full gap-2 py-3 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition text-sm font-medium text-gray-700", data: { action: "click->loading#show" } do %>
          <img src="https://www.svgrepo.com/show/475656/google-color.svg" class="w-5 h-5" alt="Google logo">
          <span><%= t('sessions.google_login') %></span>
        <% end %>

        <!-- LINEログイン -->
        <%= link_to user_line_omniauth_authorize_path, class: "flex items-center justify-center w-full gap-2 py-3 bg-green-500 text-white rounded-lg hover:bg-green-600 transition text-sm font-medium", data: { action: "click->loading#show" } do %>
          <img src="https://upload.wikimedia.org/wikipedia/commons/4/41/LINE_logo.svg" class="w-5 h-5" alt="LINE logo">
          <span><%= t('sessions.line_login') %></span>
        <% end %>

        <!-- GitHubログイン -->
        <%= link_to user_github_omniauth_authorize_path, class: "flex items-center justify-center w-full gap-2 py-3 bg-black text-white rounded-lg hover:bg-gray-900 transition text-sm font-medium", data: { action: "click->loading#show" } do %>
          <span class="flex items-center justify-center bg-black rounded-full w-6 h-6">
            <img src="https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png" alt="GitHub logo" class="w-4 h-4" />
          </span>
          <span><%= t('sessions.github_login') %></span>
        <% end %>

      </div>
    <% end %>
  </div>
</div>
