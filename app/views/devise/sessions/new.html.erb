<div class="flex justify-center items-center min-h-screen bg-gray-100 px-4">
  <div class="w-full max-w-md bg-white shadow-lg rounded-xl p-8 space-y-6">

    <!-- ログインタイトル -->
    <h1 class="text-3xl font-bold text-center text-gray-800">ログイン</h1>

    <!-- エラーメッセージ表示 -->
    <% if flash[:alert].present? %>
      <div class="text-red-600 text-sm text-center bg-red-100 rounded p-2">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <!-- フォーム -->
    <%= form_with model: @user, url: user_session_path, class: "space-y-4" do |form| %>
      
      <!-- メール入力フィールド -->
      <div>
        <%= form.email_field :email, class: "border border-gray-300 rounded-lg p-3 w-full focus:ring-2 focus:ring-blue-500 focus:outline-none", placeholder: "メールアドレス" %>
      </div>

      <!-- パスワード入力フィールド -->
      <div>
        <%= form.password_field :password, class: "border border-gray-300 rounded-lg p-3 w-full focus:ring-2 focus:ring-blue-500 focus:outline-none", placeholder: "パスワード" %>
      </div>

      <!-- ログインボタン -->
      <div>
        <%= form.submit "ログイン", class: "bg-blue-600 text-white font-semibold py-3 rounded-lg w-full hover:bg-blue-700 transition-colors" %>
      </div>
      
    <% end %>

    <!-- パスワードリセットリンク -->
    <div class="text-center">
      <a href="<%= new_user_password_path %>" class="text-sm text-blue-500 hover:underline">
        パスワードを忘れた方はこちら
      </a>
    </div>

    <!-- サインアップリンク -->
    <p class="text-sm text-center text-gray-600">
      アカウントをお持ちでない場合は
      <%= link_to "サインアップ", new_user_registration_path, class: "text-blue-500 font-medium hover:underline" %>
    </p>

    <!-- OAuthログインセクション -->
    <% if devise_mapping.omniauthable? %>
      <div class="space-y-3 mt-8">
        
        <!-- Googleログイン -->
        <%= link_to user_google_oauth2_omniauth_authorize_path, class: "flex items-center justify-center w-full gap-2 py-3 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition text-sm font-medium text-gray-700" do %>
          <img src="https://www.svgrepo.com/show/475656/google-color.svg" class="w-5 h-5" alt="Google logo">
          <span>Googleでログイン</span>
        <% end %>

        <!-- LINEログイン -->
        <%= link_to user_line_omniauth_authorize_path, class: "flex items-center justify-center w-full gap-2 py-3 bg-green-500 text-white rounded-lg hover:bg-green-600 transition text-sm font-medium" do %>
          <img src="https://www.svgrepo.com/show/353433/line-icon.svg" class="w-5 h-5" alt="LINE logo">
          <span>LINEでログイン</span>
        <% end %>

        <!-- GitHubログイン -->
        <%= link_to user_github_omniauth_authorize_path, class: "flex items-center justify-center w-full gap-2 py-3 bg-[#24292e] text-white rounded-lg hover:bg-[#1b1f23] transition text-sm font-medium" do %>
          <img src="https://www.svgrepo.com/show/512317/github-142.svg" class="w-5 h-5" alt="GitHub logo">
          <span>GitHubでログイン</span>
        <% end %>

      </div>
    <% end %>

  </div>
</div>
