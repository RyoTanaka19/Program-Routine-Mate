<h2 class="text-center text-3xl font-semibold mb-8 text-gray-800">パスワードをお忘れですか？</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "max-w-lg mx-auto bg-white shadow-lg rounded-lg p-8" }) do |f| %>
  <!-- エラーメッセージの表示部分 -->
  <div class="mb-6">
    <% if flash[:alert] %>
      <div class="alert alert-danger text-red-500 bg-red-100 p-4 rounded-md">
        <%= flash[:alert] %>
      </div>
    <% end %>
  </div>

  <!-- メールアドレスの入力フィールド -->
  <div class="mb-6">
    <%= f.label :email, class: "block text-lg font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-2 p-3 w-full border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
  </div>

  <!-- 送信ボタン -->
  <div class="actions text-center">
    <%= f.submit "パスワードリセットを申請する", class: "bg-blue-500 text-white px-6 py-3 rounded-md w-full hover:bg-blue-600 focus:outline-none transition-all" %>
  </div>
<% end %>

<!-- パスワードリセット後の説明 -->
<div class="mt-6 text-center text-sm text-gray-600">
  <p>登録したメールアドレスにパスワードリセットの手順を送信します。</p>
</div>

