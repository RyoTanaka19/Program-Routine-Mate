<h2 class="text-center text-3xl font-semibold mb-8 text-gray-800">
  <span class="text-blue-600">パスワードをお忘れですか？</span>
</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "max-w-lg mx-auto bg-white shadow-lg rounded-lg p-8" }) do |f| %>
  <!-- エラーメッセージの表示部分 -->
  <div class="mb-6">
    <% if flash[:alert] %>
      <div class="alert alert-danger text-red-500 bg-red-100 p-4 rounded-md">
        <%= flash[:alert] %>
      </div>
    <% end %>
  </div>

  <!-- メールアドレスの入力フィールド -->
  <div class="mb-6">
    <%= f.label :email, class: "block text-lg font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-2 p-3 w-full border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
  </div>

  <!-- 送信ボタン -->
  <div class="actions text-center">
    <%= f.submit "パスワードリセットを申請する", class: "bg-blue-500 text-white px-6 py-3 rounded-md w-full hover:bg-blue-600 focus:outline-none transition-all" %>
  </div>
<% end %>

<!-- パスワードリセット後の説明（横幅を狭く） -->
<div class="mt-8 mx-auto px-4 py-3 bg-blue-50 border border-blue-200 rounded-lg shadow-sm text-center max-w-md">
  <p class="text-blue-700 text-sm sm:text-base font-medium leading-relaxed flex items-center justify-center gap-2">
    <!-- 情報アイコン -->
    <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" stroke-width="2"
         viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round"
            d="M13 16h-1v-4h-1m1-4h.01M12 9v2m0 4v1m0 0h.01M12 17a9 9 0 110-18 9 9 0 010 18z"></path>
    </svg>
    登録したメールアドレスにパスワードリセットの手順を送信します。
  </p>
</div>

