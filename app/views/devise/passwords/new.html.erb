<h2 class="text-center text-2xl font-semibold mb-6">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "max-w-lg mx-auto" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :email, class: "block text-lg font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 p-2 w-full border border-gray-300 rounded-md shadow-sm" %>
  </div>

  <div class="actions text-center">
    <%= f.submit "Send me reset password instructions", class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 focus:outline-none" %>
  </div>
<% end %>

<%= render "devise/shared/links", class: "mt-4 text-center text-sm text-gray-600" %>