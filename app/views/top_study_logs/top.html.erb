<!-- 中央のランダム画像と説明 -->
<div class="flex flex-col items-center justify-center min-h-screen px-4 text-center">
  <% images = ["ogp.png", "ProgramRoutineMate.png", "mate.png"] %>
  <% selected_image = images.sample %>

  <div class="relative flex flex-col items-center" data-aos="zoom-in" data-aos-delay="300">
    <%= image_tag selected_image, class: "w-[80rem] max-w-full h-auto opacity-90" %>
  </div>

 <!-- 🔽 スクロール誘導アニメーション -->
<div class="mt-4 flex flex-col items-center" data-aos="fade-down" data-aos-delay="1000">
  <span class="mb-1 text-green-500 font-semibold text-sm animate-pulse">scroll</span>
  <div class="bounce-infinite">
    <i class="fa-solid fa-angles-down text-green-400 text-3xl"></i>
  </div>
</div>



  <!-- 横並びメニュー（画像の下に配置） -->
  <% menu_items = [
    { path: study_logs_path, icon: "home.png", label: "学習投稿記録一覧", description: "他の仲間の学習記録を見てみよう!", options: { data: { action: "click->loading#show" } } },
    (current_user && { path: study_reminders_path, icon: "calendar.png", label: "学習カレンダー", description: "学習時間を設定しよう!" }),
    (current_user && { path: new_study_genre_path, icon: "icon.png", label: "学習ジャンル作成", description: "自分が続けたいジャンルの学習を設定しよう!" }),
    (current_user && { path: new_study_genre_study_log_path(current_user.study_genres), icon: "study_logs.png", label: "学習記録投稿", description: "学習記録を投稿しよう!" })
  ].compact %>

  <div class="mt-10 w-full max-w-[90vw] bg-white px-6 py-4 rounded-lg shadow-lg overflow-x-auto scrollbar-thin scrollbar-thumb-gray-400 scrollbar-track-gray-200">
    <div class="flex space-x-6 justify-center">
      <% menu_items.each_with_index do |item, index| %>
        <div data-aos="fade-up" data-aos-delay="<%= 700 + (index * 100) %>">
          <%= link_to item[:path], item[:options] || {}, class: "flex flex-col items-center min-w-[140px] hover:bg-green-50 rounded-md p-3 transition duration-200" do %>
            <%= image_tag item[:icon], class: "w-10 h-10 mb-2" %>
            <div class="text-gray-900 font-semibold text-center text-sm mb-1">
              <%= item[:label] %>
            </div>
            <div class="text-gray-500 text-xs text-center leading-snug">
              <%= item[:description] %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
@keyframes infiniteBounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-15px); }
}
.bounce-infinite {
  animation: infiniteBounce 1s infinite;
}
</style>

