<%= form_with model: @studying_session, url: studying_sessions_path, local: true, class: "max-w-md mx-auto bg-white p-6 rounded-xl shadow-md space-y-4" do |form| %>
  <div>
    <%= form.label :start_time, "学習開始時間", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.datetime_local_field :start_time, class: "w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :end_time, "学習終了時間", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.datetime_local_field :end_time, class: "w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.submit "通知を設定", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition" %>
  </div>
<% end %>
