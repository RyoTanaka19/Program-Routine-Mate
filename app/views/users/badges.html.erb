<!-- app/views/users/badges.html.erb -->
<h1 class="text-3xl font-semibold text-center mb-6"><%= current_user.name %>さんが獲得したバッジ</h1>

<% if @study_badges.any? %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @study_badges.each do |badge| %>
      <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-transform transform hover:scale-105">
        <div class="flex items-center mb-4">
          <%= image_tag(badge.icon, class: "w-16 h-16 rounded-full mr-4") if badge.icon.present? %>
          <div>
            <h2 class="text-xl font-semibold text-gray-800"><%= badge.name %></h2>
            <p class="text-gray-600 text-sm"><%= badge.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-center text-gray-600 mt-4">まだバッジを獲得していません。</p>
<% end %>