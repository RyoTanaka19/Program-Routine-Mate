<h2 class="mb-4 font-bold text-xl text-center text-blue-600">
  退会理由をお聞かせください
</h2>

<%= form_with model: current_user, url: withdraw_user_path(current_user), method: :patch, local: true, class: "max-w-lg mx-auto p-4 border border-gray-300 rounded-md" do |f| %>
  <div class="mb-4">
    <%= f.label :withdrawal_reason, "退会理由（任意）", class: "block font-semibold mb-2 text-blue-600" %>
    <%= f.text_area :withdrawal_reason, rows: 5, class: "w-full p-2 border border-gray-300 rounded-md text-base resize-y" %>
  </div>

  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3">
    <%= link_to "キャンセル", root_path, class: "text-white font-medium px-4 py-2 border border-gray-400 rounded-md bg-green-500 text-center hover:bg-gray-200 transition" %>

   <%= f.submit "退会する", data: { turbo_confirm: "本当に退会しますか？" }, class: "bg-red-600 text-white font-bold px-6 py-2 rounded-md hover:bg-red-700 transition cursor-pointer text-center" %>
  </div>
<% end %>
