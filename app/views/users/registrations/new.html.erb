<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="w-96 bg-white shadow-lg rounded-lg p-6">
    <%= render "devise/shared/error_messages", resource: resource %>

    <h1 class="text-xl font-bold text-center mb-4">新規登録画面</h1>

    <div>
      <%= form_with model: @user, url: user_registration_path, class: "space-y-4" do |f| %>
        <div>
          <%= f.email_field :email, class: "border rounded-md p-2 w-full", placeholder: "メールアドレス" %>
        </div>

        <div>
          <%= f.text_field :name, class: "border rounded-md p-2 w-full", placeholder: "ユーザー名" %>
        </div>

        <div>
          <%= f.password_field :password, class: "border rounded-md p-2 w-full", placeholder: "パスワード" %>
        </div>

        <div>
          <%= f.password_field :password_confirmation, class: "border rounded-md p-2 w-full", placeholder: "パスワード確認" %>
        </div>

        <%= f.submit "新規登録", class: "bg-blue-500 text-white font-bold py-2 px-4 rounded w-full hover:bg-blue-600" %>
      <% end %>
    </div>

    <div class="text-center mt-4">
      <p>既にアカウントを持っている？</p>
      <%= link_to "ログイン", new_user_session_path, class: "text-blue-500 hover:underline" %>
    </div>
  </div>
</div>
